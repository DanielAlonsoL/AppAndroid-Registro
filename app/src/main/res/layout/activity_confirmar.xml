<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textoConfirma"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/texto_confirmar"
            android:textSize="@dimen/size_texto_titulos"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/editText_vertical_margin" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/muestraNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_texto_mostrar"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/editText_vertical_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/confirmaFechaNacimiento"
                android:text="@string/confirmar_fecha_nacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/muestraFechaNacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/confirmaFechaNacimiento" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/confirmaTelefono"
                android:text="@string/confirmar_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/muestraTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/confirmaTelefono" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/confirmaEmail"
                android:text="@string/confirmar_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/muestraEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/confirmaEmail" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/confirmaDescripcion"
                android:text="@string/confirmar_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:textAlignment="gravity"
                android:gravity="top" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/muestraDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_texto_mostrar"
                android:textAlignment="inherit"
                android:layout_toRightOf="@id/confirmaDescripcion"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/editText_vertical_margin"
            android:text="@string/texto_btn_back"
            android:theme="@style/MiBotonRaised"
            app:backgroundTint="@color/colorAccent"
            app:cornerRadius="@dimen/radius_button" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>